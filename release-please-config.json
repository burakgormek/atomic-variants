{
  "include-component-in-tag": true,
  "tag-separator": "@",
  "separate-pull-requests": true,
  "packages": {
    "packages/core": {
      "release-type": "node",
      "bump-minor-pre-major": true,
      "extra-label": "core",
      "extra-files": [
        {
          "type": "json",
          "path": "/bun.lock",
          "jsonpath": "$.workspaces['packages/core'].version"
        }
      ]
    },
    "packages/swc-plugin": {
      "release-type": "node",
      "bump-minor-pre-major": true,
      "extra-label": "swc-plugin",
      "extra-files": [
        {
          "type": "json",
          "path": "/bun.lock",
          "jsonpath": "$.workspaces['packages/swc-plugin'].version"
        }
      ]
    },
    "packages/webpack-plugin": {
      "release-type": "node",
      "bump-minor-pre-major": true,
      "extra-label": "webpack-plugin",
      "extra-files": [
        {
          "type": "json",
          "path": "/bun.lock",
          "jsonpath": "$.workspaces['packages/webpack-plugin'].version"
        }
      ]
    },
    "packages/next-plugin": {
      "release-type": "node",
      "bump-minor-pre-major": true,
      "extra-label": "next-plugin",
      "extra-files": [
        {
          "type": "json",
          "path": "/bun.lock",
          "jsonpath": "$.workspaces['packages/next-plugin'].version"
        }
      ]
    },
    "packages/vite-plugin": {
      "release-type": "node",
      "bump-minor-pre-major": true,
      "extra-label": "vite-plugin",
      "extra-files": [
        {
          "type": "json",
          "path": "/bun.lock",
          "jsonpath": "$.workspaces['packages/vite-plugin'].version"
        }
      ]
    }
  },
  "plugins": [
    {
      "type": "node-workspace",
      "updatePeerDependencies": true
    }
  ],
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json"
}
